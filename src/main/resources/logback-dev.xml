<?xml version="1.0" encoding="UTF-8"?>
<included>
    <!-- 개발 환경 콘솔 로그 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loki Appender -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://loki:3101/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>
                    app=team6,environment=dev,requestId=%X{requestId:-unknown},nickname=%X{nickname:-anonymous},type=%marker:-general
                </pattern>
            </label>
            <message>
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <jsonGeneratorDecorator class="net.logstash.logback.decorate.PrettyPrintingJsonGeneratorDecorator"/>
                    <includeContext>true</includeContext>
                    <includeMdc>true</includeMdc>
                    <fieldNames>
                        <message>data</message>
                    </fieldNames>
                </encoder>
            </message>
        </format>
    </appender>

    <!-- 개발 환경 파일 로그 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/dev-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/dev-application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <jsonGeneratorDecorator class="net.logstash.logback.decorate.PrettyPrintingJsonGeneratorDecorator"/>
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <fieldNames>
                <message>data</message>
            </fieldNames>
        </encoder>
    </appender>

    <!-- 에러 로그 별도 저장 설정 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/dev-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/dev-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <jsonGeneratorDecorator class="net.logstash.logback.decorate.PrettyPrintingJsonGeneratorDecorator"/>
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <fieldNames>
                <message>data</message>
            </fieldNames>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="LOKI"/>
    </root>
</included>
